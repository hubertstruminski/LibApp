@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    <a class="btn btn-primary" asp-action="New">New Customer</a>
</p>

    <table id="customers" class="table table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>

@section Scripts 
{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: "",
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a data-customer-id=" + customer.id + " class='clicked'>" + customer.name + "</a>";
                        },
                    },
                    {
                        data: "membershipType.name",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-secondary js-delete' data-customer-id=" + data + ">Delete</button>"
                        }
                    }
                ],
                drawCallback: function () {
                    $(".clicked").each(function () {
                        $(this).click(function () {
                            console.log($(this).attr("data-customer-id"));
                            var dataCustomerId = $(this).attr("data-customer-id");

                            $.ajax({
                                url: "/api/customers/" + $(this).attr("data-customer-id") + "/details",
                                method: "GET",
                                success: function (e, success) {
                                    console.log("success");
                                    console.log(e);
                                    console.log("redirect:");
                                    window.location.href = "/customers/details/" + dataCustomerId;
                                }
                            });
                        });
                    });
                }
            });
            
        });
    </script>
    <script>
        $(document).ready(function () {

            var table = $("#customers").DataTable();
            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm({
                    message: "Confirm customer deletion?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
}